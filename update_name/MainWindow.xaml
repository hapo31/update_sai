            <StatusBarItem Content="{Binding StatusText}" Height="32" VerticalAlignment="Stretch" Width="336"/>
        </StatusBar>
        <Menu RenderTransformOrigin="0.486,-4" Height="27" VerticalAlignment="Top">
            <MenuItem Header="メニュー" HorizontalContentAlignment="Center" Width="150">
                <MenuItem Header="認証" Click="OAuthMenuItemClick" HorizontalAlignment="Left" Width="140"/>

            </MenuItem>
        </Menu>
        <Button Content="update 菜" FontSize="40" Margin="10,32,10,37"  Click="StartUpdatenameButton"/>
    </Grid>
</Window>
